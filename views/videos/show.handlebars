<div class="contents-container">
  <div class="video-card">

    <div class="video-title">
      <h1>{{title}}</h1>
    </div>

    <iframe src="{{url}}" class="video-player" frameborder="0"></iframe>

    <div class="video-description">
      <p>{{description}}</p>
    </div>

    <a href="/videos/{{_id}}/edit" class="video-button" id="edit">Edit</a>
    <form method="post" action="/videos/{{_id}}/delete">
      <input type="submit" class="video-button delete-button" id="delete" value="Delete">
    </form>
  </div>
</div>